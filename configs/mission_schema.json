{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "blau.mission",
    "title": "DroneConfig",
    "description": "A mission description of team Blau for the drone project",
    "type": "object",
    "properties": {
        "parameter": {
            "type": "object",
            "properties": {
                "flight_height": {
                    "type": "number",
                    "description": "The height of the flight in meters.",
                    "minimum": 0,
                    "examples": [
                        5,
                        10,
                        15
                    ]
                }
            },
            "required": [
                "flight_height"
            ]
        },
        "type": {
            "type": "string",
            "enum": [
                "list",
                "mov_multiple"
            ]
        },
        "values": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "start_camera",
                                    "stop_camera",
                                    "takeoff",
                                    "land",
                                    "delay",
                                    "list"
                                ]
                            },
                            "values": {
                                "anyOf": [
                                    {
                                        "type": "object",
                                        "properties": {
                                            "time": {
                                                "type": "number",
                                                "description": "The time in seconds.",
                                                "minimum": 0
                                            },
                                            "altitude": {
                                                "type": "number",
                                                "description": "The altitude in meters.",
                                                "minimum": 0
                                            },
                                            "lat": {
                                                "type": "number",
                                                "description": "The latitude of the landing spot."
                                            },
                                            "lon": {
                                                "type": "number",
                                                "description": "The longitude of the landing spot."
                                            }
                                        }
                                    },
                                    {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "lat": {
                                                    "type": "number",
                                                    "description": "The lat coordinate of the movement."
                                                },
                                                "lon": {
                                                    "type": "number",
                                                    "description": "The lon coordinate of the movement."
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "$ref": "#/definitions/values"
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "lat": {
                                    "type": "number",
                                    "description": "The lat coordinate of the movement."
                                },
                                "lon": {
                                    "type": "number",
                                    "description": "The lon coordinate of the movement."
                                }
                            }
                        }
                    }
                ]
            }
        }
    }
}